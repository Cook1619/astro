---
import Main from '../components/Main.svelte'
const profilePicture = 'https://i.imgur.com/pS4cXVRb.jpg'
---

<Main>
	<div class="container">
		<img
			class="profile__picture"
			src={profilePicture}
			alt="profile picture"
			width="100px"
			height="100px"
		/>

		<div class="profile__details">
			<h1>Kyle</h1>
			<h2>Character on popular series South Park</h2>
			<p>One of the few characters who thinks before he talks.</p>
		</div>
	</div>
</Main>

<style>
	.profile {
		display: flex;
		align-items: flex-start;
		flex-wrap: wrap;
		padding: 1rem 0 3rem 0;
	}

	.profile__picture {
		flex: 1 0 300px;
	}

	.profile__details > h1 {
		margin-top: 0;
	}

	.profile__picture {
		border-radius: 50%;
		margin: 0 2rem 1rem 0;
	}
</style>
